.highlightsContainer {
    width: 450px;
}

.bottomGridContainer {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: space-between;
    column-gap: 50px;
    row-gap: 10px;
}

.separator {
    width: 100%;
    height: 1px;
    background-color: var(--color-grey-light);
    margin: 16px 0;
}

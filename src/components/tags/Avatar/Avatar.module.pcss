.container {
	width: 40px;
	height: 40px;
	border: 1px solid var(--color-base-black);
	align-items: center;
	background: var(--color-grey-550);
	border-radius: 50%;
	flex: none;
}

.avatar {
	width: 100%;
	height: 100%;
	border-radius: 50%;
	display: block;
	object-fit: cover;
	object-position: center;
}

.xs {
	width: 16px;
	height: 16px;
}

.sm {
	width: 20px;
	height: 20px;
}

.md {
	width: 30px;
	height: 30px;
}

.lg {
	width: 60px;
	height: 60px;
}

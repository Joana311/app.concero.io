.container {
  border: 1px solid var(--color-base-black);
  align-items: center;
  background: var(--color-grey-light);
  border-radius: 50%;
  height: 40px;
  width: 40px;
}

.avatar {
  border-radius: 50%;
  display: block;
  object-fit: cover;
  object-position: center;
  height: 100%;
  width: 100%;
}

.xs {
  height: 16px;
  width: 16px;
}

.sm {
  height: 20px;
  width: 20px;
}

.md {
  height: 30px;
  width: 30px;
}

.lg {
  height: 60px;
  width: 60px;
}

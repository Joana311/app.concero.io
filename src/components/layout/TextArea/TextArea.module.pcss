.container {
    flex: 1;
}

.textarea {
    width: 100%;
    height: 100%;
    padding: var(--sp-md);
    border-radius: var(--st-br-md);
    border: 1px solid var(--color-grey-dark);
    background-color: var(--color-base-black);
    font-family: inherit;
    box-sizing: border-box;
    resize: none;
}

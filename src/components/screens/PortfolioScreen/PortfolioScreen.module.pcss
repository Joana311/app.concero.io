.container {
    flex:      1;
    flex-wrap: wrap;
    gap:       var(--sp-sm);
}

.mainCardStack {
    flex:      1;
    gap:       var(--sp-sm);
    min-width: 400px;
}

.secondaryCardStack {
    gap:       var(--sp-sm);
    min-width: 350px;
}

.horizontalCardStack {
    flex-direction: row;
    gap:            var(--sp-sm);
}

.container {
    flex: 1;
    flex-wrap: wrap;
    gap: var(--sp-sm);
}

.mainCardStack {
    flex: 1;
    gap: var(--sp-sm);
    min-width: 400px;
}

.secondaryCardStack {
    gap: var(--sp-sm);
    min-width: 350px;
}

@media (max-width: 700px) {
    .container {
        width: 100%;
    }

    .secondaryCardStack {
        width: 100%;
    }

    .mainCardStack {
        width: 100%;
        min-width: unset;
    }
}
